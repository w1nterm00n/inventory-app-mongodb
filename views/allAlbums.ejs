<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="./style.css">
    </head>
<body>

    <div class="allAlbums page">
        <%- include('navbar') %>

        <div class="content">
            <h1 style="text-align: center;">All Albums</h1>

            <table  class="allAlbumsTable">
                <thead>
                  <tr>
                    <th></th>
                    <th>album</th>
                    <th>artist</th>
                    <th>genre</th>
                    <th>price</th>
                  </tr>
                </thead>
                
                <tbody>
                    <%  
                    albums.forEach(function(album) { %>
                    <tr>
                      <td> <img class="allAlbums_image" src="<%= album.img_url %>" alt="Album Cover"> </td>
                      <td> <a href="/album/<%= album.id_album %>"> <%= album.name %> </a> </td>
                      <td> <%= album.artist %> </td>
                      <td> <%= album.genre_name %> </td>
                      <td> <%= album.price %> </td>
                    </tr>
                    <% }) 
                     %>
                </tbody>
                
            </table>
        </div>
    </div>
</body>
</html>